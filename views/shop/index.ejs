<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/hero.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <header class="hero">
      <div class="banner">
        <h1 class="banner-title">NODE ECOMMERCE SITE</h1>
        <h2 class="nes">N-E-S</h2>
        <i>By Ugwu Emmanuel I.</i> <br>
        <a href="#1" class="shopNow">
          <button class="banner-btn">shop now</button>
        </a>
      </div>
    </header>

    <div class="products" id="001">
        <div class="section-title">
          <h2>our products</h2>
        </div>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product._id %>" class="btn">Details</a>
                            <% if (isAuthenticated) { %>
                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
            <%- include('../includes/pagination.ejs', {currentPage, hasNextPage, hasPreviousPage, nextPage, prevPage, lastPage}) %>
        <% } else { %>
            <h1>No Products Found!</h1>
            <p>Please signup or login to start adding new Products.</p>
        <% } %>
    </div>
<%- include('../includes/end.ejs') %>